<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_bg_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/bg"
        android:alpha="0.2"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px5"
            android:gravity="center_horizontal"
            android:text="注册"
            android:textColor="@color/black"
            android:textSize="@dimen/px30"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:background="@null"
            android:drawableLeft="@mipmap/iconfont_user"
            android:gravity="center_vertical"
            android:hint="请输入账号"
            android:singleLine="true"
            android:textSize="@dimen/px20" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:background="@null"
            android:drawableLeft="@mipmap/iconfont_password"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/px20" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:background="@null"
            android:drawableLeft="@mipmap/nickname"
            android:gravity="center_vertical"
            android:hint="请输入昵称"
            android:singleLine="true"
            android:textSize="@dimen/px20" />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:background="@null"
            android:drawableLeft="@mipmap/phone"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:singleLine="true"
            android:textSize="@dimen/px20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_phonechecknum"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px50"
            android:background="@null"
            android:drawableLeft="@mipmap/phone"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:singleLine="true"
            android:textSize="@dimen/px20" />

        <Button
            android:id="@+id/btn_dosendPhone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px50"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00000000"
            android:text="获取验证码"
            android:textColor="@color/black"
            android:textSize="@dimen/px20"
            android:layout_marginLeft="@dimen/px30"
            android:gravity="center" />

    </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/dp_darker_blue"
            android:text="注     册"
            android:textSize="@dimen/px20"
            android:textColor="@color/white"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/dp_darker_blue"
            android:gravity="center"
            android:text="取     消"
            android:textSize="@dimen/px20"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>