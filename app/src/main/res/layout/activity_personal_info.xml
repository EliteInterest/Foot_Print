<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_tab"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/personal_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/personal_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/title_back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_below="@+id/personal_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px100"
        android:layout_marginTop="@dimen/px30"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/personal_head_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="头像"
            android:gravity="center_vertical"
            android:textSize="@dimen/px20"/>

        <ImageView
            android:id="@+id/personal_image"
            android:layout_width="@dimen/px90"
            android:layout_height="@dimen/px90"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/head_image"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider_1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px1"
        android:layout_below="@+id/layout_head"
        android:background="@color/darkgrey" />

    <RelativeLayout
        android:id="@+id/layout_nickName"
        android:layout_below="@+id/divider_1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/person_nickName_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="昵称"
            android:gravity="center_vertical"
            android:textSize="@dimen/px20"/>

        <TextView
            android:id="@+id/person_nickName_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/nickName_right_arrow"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="昵称"
            android:gravity="center_vertical"
            android:textSize="@dimen/px20"/>

        <ImageView
            android:id="@+id/nickName_right_arrow"
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/right_extend2"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider_2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px1"
        android:layout_below="@+id/layout_nickName"
        android:background="@color/darkgrey" />

    <RelativeLayout
        android:id="@+id/layout_account"
        android:layout_below="@+id/divider_2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/person_account_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="账号"
            android:gravity="center_vertical"
            android:textSize="@dimen/px20"/>

        <TextView
            android:id="@+id/personal_username_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/account_right_arrow"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="账号"
            android:gravity="center_vertical"
            android:textSize="@dimen/px20"/>

        <ImageView
            android:id="@+id/account_right_arrow"
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/right_extend2"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider_3"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px1"
        android:layout_below="@+id/layout_account"
        android:background="@color/darkgrey" />

    <RelativeLayout
        android:id="@+id/layout_phone"
        android:layout_below="@+id/divider_3"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/person_phone_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="手机"
            android:gravity="center_vertical"
            android:textSize="@dimen/px20"/>

        <TextView
            android:id="@+id/person_phone_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/phone_right_arrow"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="手机"
            android:gravity="center_vertical"
            android:textSize="@dimen/px20"/>

        <ImageView
            android:id="@+id/phone_right_arrow"
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/right_extend2"/>
    </RelativeLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_settings_logout"
        style="@style/MyButtonStyle"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="@dimen/px20"
        android:text="@string/logout_submit" />
</RelativeLayout>
